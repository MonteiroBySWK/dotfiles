{
    "workbench.iconTheme": "material-icon-theme",
    "[javascript]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[jsonc]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[typescript]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[typescriptreact]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[css]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "explorer.fileNesting.patterns": {
        "*.ts": "${capture}.js",
        "*.js": "${capture}.js.map, ${capture}.min.js, ${capture}.d.ts",
        "*.jsx": "${capture}.js",
        "*.tsx": "${capture}.ts",
        "tsconfig.json": "tsconfig.*.json",
        "package.json": "package-lock.json, yarn.lock, pnpm-lock.yaml, bun.lockb, bun.lock",
        "*.sqlite": "${capture}.${extname}-*",
        "*.db": "${capture}.${extname}-*",
        "*.sqlite3": "${capture}.${extname}-*",
        "*.db3": "${capture}.${extname}-*",
        "*.sdb": "${capture}.${extname}-*",
        "*.s3db": "${capture}.${extname}-*"
    },
    "git.autofetch": true,
    "[json]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "editor.tabSize": 2,
    "[html]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "workbench.colorTheme": "GitHub Dark Colorblind (Beta)",
    "diffEditor.ignoreTrimWhitespace": false,
    "qt-core.qtInstallationRoot": "/home",
    "github.copilot.nextEditSuggestions.enabled": true,
    "chat.mcp.autostart": "newAndOutdated",
    "editor.minimap.enabled": false,
    "[javascriptreact]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "qt-core.additionalQtPaths": [
        {
            "name": "Qt-5.15.17-linux-g++_from_PATH",
            "path": "/usr/sbin/qmake"
        }
    ],
    "chat.tools.terminal.autoApprove": {
        "cd /home/monteiro/codes/sonar && \\\ncat > 'src/app/dashboard/(visualization)/activity/page.tsx' << 'EOF'\n\"use client\";\n\nimport { Card, CardDescription, CardHeader, CardTitle } from \"@/components/ui/card\";\n\nexport default function ActivityPage() {\n  return (\n    <div className=\"flex flex-1 flex-col gap-6 p-6\">\n      <Card>\n        <CardHeader>\n          <CardTitle>Atividades - Em Construção</CardTitle>\n          <CardDescription>\n            Esta página está sendo refatorada para usar a nova arquitetura com hooks e API routes.\n          </CardDescription>\n        </CardHeader>\n      </Card>\n    </div>\n  );\n}\nEOF\ncat > src/app/dashboard/tasks/page.tsx << 'EOF'\n\"use client\";\n\nimport { Card, CardDescription, CardHeader, CardTitle } from \"@/components/ui/card\";\n\nexport default function TasksPage() {\n  return (\n    <div className=\"flex flex-1 flex-col gap-6 p-6\">\n      <Card>\n        <CardHeader>\n          <CardTitle>Tarefas - Em Construção</CardTitle>\n          <CardDescription>\n            Esta página está sendo refatorada para usar a nova arquitetura com hooks e API routes.\n          </CardDescription>\n        </CardHeader>\n      </Card>\n    </div>\n  );\n}\nEOF": {
            "approve": true,
            "matchCommandLine": true
        },
        "npm run build": true
    },
    "window.zoomLevel": 0.9,
    "github.copilot.enable": {
        "*": false,
        "plaintext": false,
        "markdown": false,
        "scminput": false
    }
}