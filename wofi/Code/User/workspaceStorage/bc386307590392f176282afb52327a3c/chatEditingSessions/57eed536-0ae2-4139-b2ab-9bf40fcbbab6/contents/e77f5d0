"use client"

import { use } from "react"
import { Card, CardContent, CardHeader, CardTitle } from "@/components/ui/card"
import { Badge } from "@/components/ui/badge"
import { RealTimeHeartRate } from "@/components/real-time-heart-rate"
import { RealTimeHeartRateChart } from "@/components/real-time-heart-rate-chart"
import { RealTimeHealthGauge } from "@/components/real-time-health-gauge"
import { mockEmployees } from "@/lib/mock-data"

interface EmployeeDetailPageProps {
  params: Promise<{ id: string }>
}

export default function EmployeeDetailPage({ params }: EmployeeDetailPageProps) {
  const { id } = use(params)
  const employee = mockEmployees.find((emp) => emp.id === id)

  if (!employee) {
    return (
      <div className="flex-1 space-y-4 p-4 md:p-8 pt-6">
        <div className="text-center">
          <h2 className="text-2xl font-bold">Employee Not Found</h2>
          <p className="text-muted-foreground">The requested employee could not be found.</p>
        </div>
      </div>
    )
  }

  return (
    <div className="flex-1 space-y-4 p-4 md:p-8 pt-6">
      <div className="flex items-center justify-between">
        <div>
          <h2 className="text-3xl font-bold tracking-tight">{employee.name}</h2>
          <p className="text-muted-foreground">
            {employee.position} â€¢ {employee.department}
          </p>
        </div>
        <Badge variant={employee.status === "Active" ? "default" : "secondary"}>{employee.status}</Badge>
      </div>

      {/* Employee Info Card */}
      <Card>
        <CardHeader>
          <CardTitle>Employee Information</CardTitle>
        </CardHeader>
        <CardContent>
          <div className="grid grid-cols-1 md:grid-cols-2 gap-4">
            <div>
              <p className="text-sm font-medium text-muted-foreground">Email</p>
              <p>{employee.email}</p>
            </div>
            <div>
              <p className="text-sm font-medium text-muted-foreground">Department</p>
              <p>{employee.department}</p>
            </div>
            <div>
              <p className="text-sm font-medium text-muted-foreground">Position</p>
              <p>{employee.position}</p>
            </div>
            <div>
              <p className="text-sm font-medium text-muted-foreground">Smartwatch ID</p>
              <p>{employee.smartwatchId || "Not assigned"}</p>
            </div>
          </div>
        </CardContent>
      </Card>

      {/* Real-time Health Monitoring */}
      <div className="grid gap-4 md:grid-cols-1">
        <RealTimeHeartRate
          employeeId={employee.id}
          employeeName={employee.name}
          employeePhoto="/placeholder.svg?height=48&width=48"
        />
      </div>

      {/* Real-time Chart */}
      <div className="grid gap-4 md:grid-cols-1">
        <RealTimeHeartRateChart employeeId={employee.id} employeeName={employee.name} />
      </div>

      {/* Health Gauges */}
      <div className="grid gap-4 md:grid-cols-3">
        <RealTimeHealthGauge
          employeeId={employee.id}
          employeeName={employee.name}
          metric="bpm"
          title="Heart Rate"
          unit="BPM"
          minValue={40}
          maxValue={120}
          normalRange={[60, 100]}
        />
        <RealTimeHealthGauge
          employeeId={employee.id}
          employeeName={employee.name}
          metric="spo2"
          title="Blood Oxygen"
          unit="%"
          minValue={90}
          maxValue={100}
          normalRange={[95, 100]}
        />
        <RealTimeHealthGauge
          employeeId={employee.id}
          employeeName={employee.name}
          metric="stressLevel"
          title="Stress Level"
          unit=""
          minValue={0}
          maxValue={100}
          normalRange={[0, 40]}
        />
      </div>
    </div>
  )
}
