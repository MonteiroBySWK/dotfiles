function TimelineItem({
  title,
  subtitle,
  date,
  children,
}: {
  title: string;
  subtitle?: string;
  date: string;
  children: React.ReactNode;
}) {
  return (
    <div className="relative pl-6 pb-10 border-l-2 border-gray-300">
      <div className="absolute -left-3 top-1.5 w-5 h-5 bg-blue-500 rounded-full border-4 border-white"></div>
      <div className="mb-1 text-sm text-gray-500">{date}</div>
      <h3 className="text-lg font-semibold">{title}</h3>
      {subtitle && <h4 className="text-md font-medium text-gray-600">{subtitle}</h4>}
      <ul className="list-disc pl-5 mt-2 text-gray-800 text-sm space-y-1">{children}</ul>
    </div>
  );
}


