        <div className="flex items-center gap-2 mb-1">
          {icon}
          <h3 className="font-semibold text-base">{title}</h3>
        </div>
        <ul className="text-sm text-gray-800 list-disc list-inside space-y-1">
          {description}
        </ul>
      </div>
    </div>
  );
}


