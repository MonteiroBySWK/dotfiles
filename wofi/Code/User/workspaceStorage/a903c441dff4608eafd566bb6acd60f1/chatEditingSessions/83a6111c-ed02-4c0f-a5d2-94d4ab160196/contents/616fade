const TitleSection = ({ children }) => (
  <h2 className="text-3xl md:text-4xl font-bold text-center mb-8 text-gray-800">
    {children}
  </h2>
);

const Section = ({ id, className, children }) => (
  <section id={id} className={className}>
    {children}
  </section>
);

const checkColorStatus = (status) => {
  if (status === "FINISHED") {
    return "text-green-800 bg-green-200 border-green-700";
  }
  if (status === "IN_PROGRESS") {
    return "text-blue-800 bg-blue-200 border-blue-700";
  }
  if (status === "MODELING") {
    return "text-purple-800 bg-purple-200 border-purple-700";
  }
};

const ProjectItem = ({ data, isActive, onClick }) => {
  return (
    <div
      onClick={onClick}
      className={`flex flex-col md:flex-row border border-gray-200 rounded-lg overflow-hidden shadow-lg p-4 text-gray-800 w-full h-full flex-shrink-0 transition-all duration-500 bg-white ${
        isActive ? "opacity-100 scale-100" : "opacity-70 scale-95 hover:opacity-80"
      } ${!isActive && "cursor-pointer"}`}
    >
      <div className="relative w-full md:w-1/3">
        <div className="w-full h-48 md:h-full bg-gradient-to-br from-blue-400 to-purple-500 rounded-lg flex items-center justify-center">
          <div className="text-white text-4xl font-bold">
            {data.name.charAt(0)}
          </div>
        </div>
        <span
          className={`px-2 py-1 absolute top-2 left-2 z-10 text-xs rounded-full font-semibold ${checkColorStatus(
            data.status
          )}`}
        >
          {data.status.replace('_', ' ')}
        </span>
      </div>
      <div className="px-0 md:px-6 w-full md:w-2/3 mt-4 md:mt-0 flex flex-col justify-center">
        <h3 className="font-bold text-gray-900 text-xl md:text-2xl mb-3">
          {data.name}
        </h3>
        <p className="mb-4 text-sm md:text-base text-gray-600 line-clamp-3">
          {data.description}
        </p>
        <div className="flex gap-2 flex-wrap mb-6">
          {data.technologies.map((tech, i) => (
            <span
              key={i}
              className="px-3 py-1 bg-gray-100 text-gray-700 text-xs rounded-full font-medium"
            >
              {tech}
            </span>
          ))}
        </div>
        <a
          href={data.url}
          target="_blank"
          rel="noopener noreferrer"
          className="inline-flex w-fit justify-center items-center gap-x-2 bg-blue-600 hover:bg-blue-700 text-white py-2 px-4 rounded-lg transition-all duration-200 hover:scale-105 text-sm font-medium"
          onClick={(e) => e.stopPropagation()}
        >
          Ver Github
          <svg className="w-4 h-4" fill="currentColor" viewBox="0 0 24 24">
            <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
          </svg>
        </a>
      </div>
    </div>
  );
};

export default function ImprovedProjectsSlider() {
  const [currentIndex, setCurrentIndex] = useState(0);
  const [isPaused, setIsPaused] = useState(false);
  const [isTransitioning, setIsTransitioning] = useState(false);
  const timeoutRef = useRef(null);
  const touchStartX = useRef(0);
  const touchStartY = useRef(0);
  const lastTouchTime = useRef(0);
  const numProjects = dataProjectArr.length;

  const nextSlide = useCallback(() => {
    if (isTransitioning) return;
    setIsTransitioning(true);
    setCurrentIndex((prevIndex) => (prevIndex + 1) % numProjects);
    setTimeout(() => setIsTransitioning(false), 300);
  }, [numProjects, isTransitioning]);

  const prevSlide = useCallback(() => {
    if (isTransitioning) return;
    setIsTransitioning(true);
    setCurrentIndex((prevIndex) => (prevIndex - 1 + numProjects) % numProjects);
    setTimeout(() => setIsTransitioning(false), 300);
  }, [numProjects, isTransitioning]);

  const resetTimeout = () => {
    if (timeoutRef.current) {
      clearTimeout(timeoutRef.current);
    }
  };

  useEffect(() => {
    resetTimeout();
    if (!isPaused && !isTransitioning) {
      timeoutRef.current = setTimeout(nextSlide, 4000);
    }
    return () => {
      resetTimeout();
    };
  }, [currentIndex, isPaused, nextSlide, isTransitioning]);

  const goToSlide = (slideIndex) => {
    if (slideIndex === currentIndex || isTransitioning) return;
    setIsTransitioning(true);
    setCurrentIndex(slideIndex);
    setTimeout(() => setIsTransitioning(false), 300);
  };

  const handleTouchStart = (e) => {
    const touch = e.touches[0];
    touchStartX.current = touch.clientX;
    touchStartY.current = touch.clientY;
    lastTouchTime.current = Date.now();
    setIsPaused(true);
  };

  const handleTouchMove = (e) => {
    if (!touchStartX.current) return;
    
    // Previne o scroll da pÃ¡gina durante o swipe horizontal
    const touch = e.touches[0];
    const diffX = touchStartX.current - touch.clientX;
    const diffY = touchStartY.current - touch.clientY;
    
    if (Math.abs(diffX) > Math.abs(diffY)) {
      e.preventDefault();
    }
  };

  const handleTouchEnd = (e) => {
    if (!touchStartX.current) return;
    
    const touch = e.changedTouches[0];
    const diffX = touchStartX.current - touch.clientX;
    const diffY = touchStartY.current - touch.clientY;
    const timeDiff = Date.now() - lastTouchTime.current;
    
    // SÃ³ processa como swipe se foi majoritariamente horizontal
    if (Math.abs(diffX) > Math.abs(diffY) && Math.abs(diffX) > 50 && timeDiff < 300) {
      if (diffX > 0) {
        nextSlide();
      } else {
        prevSlide();
      }
    }
    
    touchStartX.current = 0;
    touchStartY.current = 0;
    setTimeout(() => setIsPaused(false), 100);
  };

  return (
    <Section
      id="projects"
      className="min-h-screen bg-gradient-to-b from-gray-50 to-white py-12 px-4 flex flex-col items-center justify-center"
    >
      <TitleSection>Meus Projetos</TitleSection>
      
      {/* Container do slider */}
      <div
        className="w-full max-w-6xl h-[500px] md:h-[450px] relative overflow-hidden"
        onMouseEnter={() => setIsPaused(true)}
        onMouseLeave={() => setIsPaused(false)}
        onTouchStart={handleTouchStart}
        onTouchMove={handleTouchMove}
        onTouchEnd={handleTouchEnd}
      >
        {dataProjectArr.map((project, index) => {
          let offset = index - currentIndex;
          if (offset > numProjects / 2) offset -= numProjects;
          if (offset < -numProjects / 2) offset += numProjects;

          const isVisible = Math.abs(offset) <= 1;
          const isActive = index === currentIndex;

          return (
            <div
              key={`${project.name}-${index}`}
              className="absolute top-0 left-1/2 w-[90%] sm:w-[85%] md:w-[70%] lg:w-[60%] h-full transition-all duration-500 ease-out"
              style={{
                transform: `translateX(calc(-50% + ${offset * (window.innerWidth < 768 ? 100 : 70)}%)) scale(${
                  isActive ? 1 : 0.85
                })`,
                opacity: isVisible ? (isActive ? 1 : 0.6) : 0,
                zIndex: numProjects - Math.abs(offset),
                pointerEvents: isVisible ? "auto" : "none",
              }}
            >
              <ProjectItem
                data={project}
                isActive={isActive}
                onClick={() => goToSlide(index)}
              />
            </div>
          );
        })}
        
        {/* BotÃµes de navegaÃ§Ã£o desktop */}
        <button
          onClick={prevSlide}
          className="hidden md:flex absolute left-4 top-1/2 transform -translate-y-1/2 z-20 bg-white/80 hover:bg-white shadow-lg rounded-full w-12 h-12 items-center justify-center transition-all duration-200 hover:scale-110"
          disabled={isTransitioning}
        >
          <svg className="w-6 h-6 text-gray-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path strokeLinecap="round" strokeLinejoin="round" strokeWidth={2} d="M15 19l-7-7 7-7" />
          </svg>
        </button>
        
        <button
          onClick={nextSlide}
          className="hidden md:flex absolute right-4 top-1/2 transform -translate-y-1/2 z-20 bg-white/80 hover:bg-white shadow-lg rounded-full w-12 h-12 items-center justify-center transition-all duration-200 hover:scale-110"
          disabled={isTransitioning}
        >
          <svg className="w-6 h-6 text-gray-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path strokeLinecap="round" strokeLinejoin="round" strokeWidth={2} d="M9 5l7 7-7 7" />
          </svg>
        </button>
      </div>

      {/* Indicadores */}
      <div className="flex justify-center gap-x-3 mt-8">
        {dataProjectArr.map((_, index) => (
          <button
            key={index}
            onClick={() => goToSlide(index)}
            className={`w-3 h-3 rounded-full transition-all duration-300 ${
              currentIndex === index 
                ? "bg-blue-600 scale-125 shadow-lg" 
                : "bg-gray-300 hover:bg-gray-400 hover:scale-110"
            }`}
            disabled={isTransitioning}
          ></button>
        ))}
      </div>
      
      {/* InstruÃ§Ãµes mobile */}
      <div className="md:hidden mt-4 text-center">
        <p className="text-sm text-gray-500">
          ðŸ‘ˆ Deslize para navegar entre os projetos ðŸ‘‰
        </p>
      </div>
    </Section>
  );
}