import { useEffect, useRef } from "react";
import gsap from "gsap";

const projects = [
  {
    name: "TheraLabs - Plataforma de Gestão",
    description: [
      "Fundador & Coordenador | 2023 – Presente",
      "Desenvolvimento de plataforma web para gestão de projetos, com dashboards interativos, autenticação e integrações.",
      "Stack: React, TypeScript, Node.js, MongoDB, Tailwind, GSAP.",
      "Resultados: +10 clientes atendidos, automação de processos e redução de retrabalho."
    ],
    link: "#"
  },
  {
    name: "TechnosJR - Portal de Serviços",
    description: [
      "Desenvolvedor FullStack Voluntário | 2023 – 2024",
      "Criação de portal para gerenciamento de demandas, com foco em usabilidade e responsividade.",
      "Stack: Next.js, TypeScript, PostgreSQL, Styled Components.",
      "Resultados: Otimização do fluxo de trabalho e aumento do engajamento da equipe."
    ],
    link: "#"
  },
  {
    name: "Portfólio Pessoal",
    description: [
      "Projeto autoral com foco em animações, design e acessibilidade.",
      "Stack: React, Vite, Tailwind, GSAP.",
      "Resultados: Demonstração de skills e diferencial visual para recrutadores."
    ],
    link: "#"
  }
];

export default function Projects() {
  const sectionRef = useRef<HTMLDivElement>(null);

  useEffect(() => {
    gsap.fromTo(
      sectionRef.current,
      { opacity: 0, y: 60 },
      { opacity: 1, y: 0, duration: 1, delay: 0.2, ease: "power2.out" }
    );
  }, []);

  return (
    <section id="projects" ref={sectionRef} className="py-24 px-4 max-w-4xl mx-auto text-center">
      <h2 className="text-4xl font-extrabold text-purple-300 mb-8 drop-shadow-lg">Projetos</h2>
      <div className="grid sm:grid-cols-2 gap-8">
        {projects.map(project => (
          <div
            key={project.name}
            className="bg-white/80 rounded-2xl p-6 shadow-xl hover:scale-105 hover:shadow-2xl transition-transform flex flex-col items-start text-left"
          >
            <h3 className="text-2xl font-bold text-blue-700 mb-2">{project.name}</h3>
            <ul className="list-disc list-inside ml-4 text-slate-700 text-base mb-4">
              {project.description.map((desc, idx) => (
                <li key={idx}>{desc}</li>
              ))}
            </ul>
            <a href={project.link} className="text-blue-500 hover:underline mt-auto">Ver mais</a>
          </div>
        ))}
      </div>
    </section>
  );
}
